#!/usr/bin/env node
// vim:syntax=javascript

require('dotenv').config({path: __dirname+'/../.env'});

const prog = require('caporal');
const JKSiteCommand = require('../lib/commands/jksite');

prog
  .version('0.1.0')
  .command('jksite', 'Run jksite commands')
  .argument('[action]', 'Run action', /^[a-z]+$/, 'default')
  .action(JKSiteCommand.process)

prog.parse(process.argv);

